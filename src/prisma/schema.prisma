generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  messages Message[]
}

model Room {
  id       Int       @id @default(autoincrement())
  name     String
  messages Message[]
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  userId    Int
  roomId    Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  room Room @relation(fields: [roomId], references: [id])
}
